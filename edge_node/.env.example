# EdgeBot environment configuration (example)
# Copy to .env and tweak as needed

# Server
EDGEBOT_HOST=0.0.0.0
EDGEBOT_PORT=8080
EDGEBOT_HEALTH_PORT=8081
EDGEBOT_METRICS_PORT=8081

# Syslog inputs
EDGEBOT_SYSLOG_ENABLED=true
EDGEBOT_SYSLOG_UDP_PORT=5514
EDGEBOT_SYSLOG_TCP_PORT=5515

# Output mothership (HTTPS optional)
# EDGEBOT_MOTHERSHIP_URL=https://example.com/ingest
# EDGEBOT_AUTH_TOKEN=replace-with-real-token

# Batching and retries
EDGEBOT_BATCH_SIZE=100
EDGEBOT_BATCH_TIMEOUT=5

# TLS & Security (when HTTPS mothership is enabled)
# EDGEBOT_TLS_VERIFY=true