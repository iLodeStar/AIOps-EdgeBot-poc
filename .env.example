# AIOps EdgeBot - Environment Configuration (example)
# Copy to .env and configure with your actual values

# Optional Services - Enable/Disable Components
# See docs/OPTIONAL_SERVICES.md for detailed setup instructions
ENABLE_OBSERVABILITY=false    # Grafana + Prometheus + Loki monitoring stack
ENABLE_OLLAMA=false          # Local LLM for intelligent log enrichment  
ENABLE_ALERTING=false        # Email alerts via AlertManager

# Email notification settings for AlertManager
# Uncomment and configure these to enable email alerts

# SMTP server settings
#ALERT_SMTP_HOST=smtp.gmail.com
#ALERT_SMTP_PORT=587
#ALERT_SMTP_USER=your-email@gmail.com
#ALERT_SMTP_PASS=your-app-password
#ALERT_SMTP_STARTTLS=true

# Email sender and recipients
#ALERT_EMAIL_FROM=alertmanager@yourcompany.com
#ALERT_EMAIL_TO=ops-team@yourcompany.com

# For multiple recipients, separate with commas:
#ALERT_EMAIL_TO=admin1@yourcompany.com,admin2@yourcompany.com

# LLM Configuration (when ENABLE_OLLAMA=true)
# See docs/LLM_OFFLINE.md for complete model setup
#MOTHERSHIP_LLM_ENABLED=true
#LLM_BACKEND=ollama
#OLLAMA_BASE_URL=http://localhost:11434
#OLLAMA_MODEL=llama3.1:8b-instruct-q4_0

# Loki Integration (when ENABLE_OBSERVABILITY=true) 
#LOKI_ENABLED=true
#LOKI_URL=http://localhost:3100